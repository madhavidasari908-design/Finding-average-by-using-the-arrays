#include <stdio.h>

int main() {
    int n, i;
    float arr[100], sum = 0, average;

    printf("Enter number of elements: ");
    scanf("%d", &n);

    printf("Enter %d numbers:\n", n);
    for (i = 0; i < n; i++) {
        scanf("%f", &arr[i]);
        sum = sum + arr[i];
    }

    average = sum / n;

    printf("Average = %.2f", average);

    return 0;
}
